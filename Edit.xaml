<Window x:Class="Test.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="编辑页面" Height="600" Width="864" Initialized="Window_Initialized">
    <Viewbox Height="600" Width="864" >
        <Grid Background="#424B47" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="864" Height="600">
            <Border Height="auto" VerticalAlignment="Top" 
                Margin="0,0,0,0" Background="#FF676A69" Width="auto" >
                <DockPanel Background="#FF676A69" Height="25" LastChildFill="False" VerticalAlignment="Top" Margin="0,0,9,0">
                    <Menu Background="#FF676A69">
                        <MenuItem Header="文件" >
                            <MenuItem Header="新建工程" Click="btnNewFile"></MenuItem>
                            <MenuItem Header="新建宏程序" Click="btnNewFile"></MenuItem>
                            <MenuItem Header="保存工程"></MenuItem>
                            <MenuItem Header="文件另存为" Click="btnFileSave"></MenuItem>
                            <MenuItem Header="导入板图像"></MenuItem>
                            <MenuItem Header="扫描板图像"></MenuItem>
                            <MenuItem Header="打印"></MenuItem>
                            <MenuItem Header="打印预览"></MenuItem>
                            <MenuItem Header="退出"></MenuItem>
                        </MenuItem>
                        <MenuItem Header="编辑">
                            <MenuItem Header="剪切"></MenuItem>
                            <MenuItem Header="复制"></MenuItem>
                            <MenuItem Header="粘贴"></MenuItem>
                            <MenuItem Header="删除"></MenuItem>
                            <MenuItem Header="创建模式"></MenuItem>
                            <MenuItem Header="创建工序"></MenuItem>
                            <MenuItem Header="剪切"></MenuItem>
                        </MenuItem>
                        <MenuItem Header="运行">
                            <MenuItem Header="运行"></MenuItem>
                            <MenuItem Header="逐步运行"></MenuItem>
                            <MenuItem Header="停止"></MenuItem>
                            <MenuItem Header="运行工序"></MenuItem>
                        </MenuItem>
                        <MenuItem Header="观察">
                            <MenuItem Header="宏程序"></MenuItem>
                            <MenuItem Header="产品程序"></MenuItem>
                            <MenuItem Header="更改主题"></MenuItem>
                            <MenuItem Header="英制单位"></MenuItem>
                            <MenuItem Header="语言"></MenuItem>
                            <MenuItem Header="图形显示"></MenuItem>
                            <MenuItem Header="重置布局"></MenuItem>
                            <MenuItem Header="数据"></MenuItem>
                            <MenuItem Header="现场视频"></MenuItem>

                        </MenuItem>
                        <MenuItem Header="配置">
                            <MenuItem Header="生产"></MenuItem>
                            <MenuItem Header="产品图"></MenuItem>
                            <MenuItem Header="工具"></MenuItem>
                            <MenuItem Header="工具Z偏移量"></MenuItem>
                            <MenuItem Header="固定装置"></MenuItem>
                            <MenuItem Header="重新装配"></MenuItem>
                            <MenuItem Header="事件监测"></MenuItem>
                            <MenuItem Header="日志"></MenuItem>
                            <MenuItem Header="维护管理器"></MenuItem>
                            <MenuItem Header="自定义按钮"></MenuItem>
                            <MenuItem Header="工艺限值"></MenuItem>
                            <MenuItem Header="机器人设置"></MenuItem>
                            <MenuItem Header="寻针器设置"></MenuItem>
                            <MenuItem Header="扇区宽度设置"></MenuItem>
                            <MenuItem Header="轨道设置"></MenuItem>
                        </MenuItem>
                        <MenuItem Header="实用程序">
                            <MenuItem Header="机器人实用程序"></MenuItem>
                            <MenuItem Header="压力调节"></MenuItem>
                            <MenuItem Header="轨道实用程序"></MenuItem>
                            <MenuItem Header="逆变器"></MenuItem>
                        </MenuItem>
                        <MenuItem Header="定位指针">
                            <MenuItem Header="摄像头"></MenuItem>
                            <MenuItem Header="工具法兰"></MenuItem>
                        </MenuItem>
                        <MenuItem Header="帮助">
                            <MenuItem Header="快捷键图例"></MenuItem>
                            <MenuItem Header="显示提示"></MenuItem>
                            <MenuItem Header="复制配置到磁盘"></MenuItem>
                        </MenuItem>
                    </Menu>
                </DockPanel>
            </Border>
            <Border   VerticalAlignment="Top" HorizontalAlignment="Left"
                Margin="0,24,0,0" Background="#424B47" Width="860"  Height="auto"
                    BorderBrush="Black" BorderThickness="0">
                <WrapPanel HorizontalAlignment="Left" Width="860" Height="auto"  
                       VerticalAlignment="Top" Margin="0,1,0,1" >
                    <Button   Content="新建" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="40" Margin="20,0,5,1" Click="btnNewFile" Name="btnNewFile10"/>
                    <Button Content="打开" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="40" Margin="2,0,5,1" Click="btnOpenFile"/>
                    <Button Content="保存" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="40" Margin="2,0,20,1" Click="btnFileSave"/>

                    <Button Content="剪切" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="40" Margin="2,0,5,1"/>
                    <Button Content="复制" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="40" Margin="2,0,5,1"/>
                    <Button Content="粘贴" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="40" Margin="2,0,20,1"/>

                    <Button Content="运行" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="40" Margin="2,0,5,1"/>
                    <Button Content="逐步运行" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="40" Margin="2,0,5,1"/>
                    <Button Content="停止" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="40" Margin="2,0,20,1"/>

                    <Button Content="打开摄像头" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="68" Margin="2,0,5,1"/>
                    <Button Content="报警消音" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="63" Margin="2,0,5,1"/>
                    <Button Content="清除故障" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Height="50" Width="73" Margin="2,0,5,2"/>
                    <Image Height="50" Width="100"></Image>
                    <!--logo-->

                    <TextBox Background="#424B47" Foreground="White" Text="面包屑导航"  Width="490" Height="25" HorizontalAlignment="Left"
                             ></TextBox>
                    <Button Content="浸泡" Margin="60,0,0,0" Width="40"></Button>
                    <!--自定义按钮5个，此前为默认自定义按钮-->
                    <Button Content="排胶" Margin="5,0,0,0" Width="40"></Button>
                    <Button Content="周期" Margin="5,0,0,0" Width="40"></Button>
                    <Button Content="上步" Margin="5,0,0,0" Width="40"></Button>
                    <Button Content="z高" Margin="5,0,0,0" Width="40"></Button>
                    <Button Content="开关灯" Margin="27,0,0,0" Width="60"></Button>
                </WrapPanel>
            </Border>

            <Border  BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="195" Margin="40,108,0,0" VerticalAlignment="Top" Width="100">
                <StackPanel>
                    <TextBlock Text="树" Margin="0,5,0,5" ></TextBlock>
                    <DockPanel x:Name="TreeButton" >
                        <StackPanel DockPanel.Dock="Left" Width="100">
                            <TreeView ItemsSource="{Binding }" Name="Tree" BorderThickness="0" >
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding }">
                                        <TextBlock Text="{Binding }"></TextBlock>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Right" Width="100" Orientation="Horizontal" DataContext="{Binding SelectedItem}">

                            <TextBlock Text="结果"></TextBlock>
                            <TextBlock Text="结果"></TextBlock>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </Border>


            <Border  BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="265" Margin="40,305,0,0" VerticalAlignment="Top" Width="215">
                <WrapPanel>
                    <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Width="215">
                        <TextBlock  Text="自定义控件显示信息" />
                    </Border>
                    <WrapPanel Width="215" />
                    <DataGrid>
                        <DataGrid.Columns></DataGrid.Columns>
                        
                    </DataGrid>
                    <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                            Margin="50,205,0,0"
                    Height="20" Width="100">
                        <Button Content="显示普通设置"  />
                    </Border>
                </WrapPanel>
            </Border>


            <Border Background="Black" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="195" Margin="155,108,0,0" VerticalAlignment="Top" Width="100">
                <WrapPanel>
                    <ComboBox Name="comboBox1" IsDropDownOpen="True" Background=" 	#696969" Height="20" 
                              VerticalAlignment="Top" HorizontalAlignment="Center" Width="100"
                              ItemsSource="{Binding}" SelectionChanged="comboBox1_SelectionChanged">
                        
                    </ComboBox>
                    <Button  Content="线涂覆" Width="100"/>
                    <Button Content="轨道" Width="100"/>
                    <Button Content="控制" Width="100"/>
                    <Button Content="通用" Width="100"/>
                    <Button Content="运动" Width="100"/>
                    <Button Content="Camera and Visual" Width="100"/>
                    <Button Content="z头" Width="100"/>
                </WrapPanel>
            </Border>


            <Border Background="Black" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="auto" 
                    Margin="265,110,0,100" VerticalAlignment="Top" Width="auto">
                <WrapPanel Margin="0,0,0,0" HorizontalAlignment ="Left" Width="557" Height="290"></WrapPanel>
            </Border>
            <Button Content="指针"  HorizontalAlignment="Right" Margin="0,110,8,0" VerticalAlignment="Top"
                    Height="30" Width="30"></Button>
            <DataGrid  HorizontalAlignment="Left" Height="150" Margin="265,410,0,0" VerticalAlignment="Top" Width="559"/>
            <Button Content="清晰"  HorizontalAlignment="Right" Margin="0,200,9,0" VerticalAlignment="Top"
                Height="15" Width="30"/>
            <Button Content="模糊" HorizontalAlignment="Right" Margin="0,216,9,0" VerticalAlignment="Top"
                Height="15" Width="30"/>
            <Button Content="放大" HorizontalAlignment="Right" Margin="0,344,9,0" VerticalAlignment="Top"
                Height="15" Width="30"/>
            <Button Content="缩小" HorizontalAlignment="Right" Margin="0,362,9,0" VerticalAlignment="Top"
                Height="15" Width="30"/>
            
        </Grid>
    </Viewbox>
</Window>
