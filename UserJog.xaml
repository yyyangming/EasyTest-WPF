<Window x:Class="Test.UserJog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="UserJog" Height="350" Width="500">
    <Grid>
        <StackPanel>
            <WrapPanel  VerticalAlignment="Top" Width="500">
                <Button Content="胶阀" Width="75" Height="75" Margin="170,10,0,0"></Button>
                <Button Content="轨道" Width="75" Height="75" Margin="10,10,0,0"></Button>
            </WrapPanel>
            <WrapPanel>
                <ComboBox Name="ccbConfig" Margin="50,0,0,0" Width="400" Height="auto"  ItemsSource="{Binding}">
                    <ComboBoxItem></ComboBoxItem>
                </ComboBox>
            </WrapPanel>
            <WrapPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="145">
                <Button Content="Z" Margin="10,10,0,0" Width="50" Height="75"></Button>
                <Button Content="XY" Margin="10,10,0,0" Width="75" Height="75"></Button>
                <Button Content="Tools" Width="140" Height="50" Margin="10,70,0,0"></Button>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Window>
