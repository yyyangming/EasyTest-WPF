<Window x:Class="Test.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="主控制" Height="360" Width="320" Initialized="UserView_initoalized" Loaded="UserView_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="240"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Path Stroke="Black" StrokeThickness="1" >
            <Path.Data>
                <LineGeometry StartPoint="0,120" EndPoint="320,120" />
            </Path.Data>
        </Path>
        
        <Path Stroke="Black" StrokeThickness="1" >
            <Path.Data>
                <LineGeometry StartPoint="160,0" EndPoint="160,240"/>
            </Path.Data>
        </Path>
        <Frame Grid.Row="0" Name="UserViewCamera" ></Frame>
        <Grid Grid.Row="1">
            <Border VerticalAlignment="Bottom" BorderBrush="SlateBlue" BorderThickness="1" 
                Background="AliceBlue" CornerRadius="2">
                <WrapPanel VerticalAlignment="Bottom" Width="320" Height="144" Margin="0,0,1,0"></WrapPanel>
            </Border>
        </Grid>
            
    </Grid>
</Window>
