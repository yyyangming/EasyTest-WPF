<Page x:Class="Test.control1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="control1">

    <Grid>
        <Grid.ColumnDefinitions>
            <!--定义Grid的列，定义3列-->
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <!--定义Grid的行，定义3行-->
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" FontSize="20">气压</Label>

        <Slider  Grid.Row="2" VerticalAlignment="Top" Width="620"
                 Height="50" Margin="0,30,0,0" />
        <Label Grid.Row="3" FontSize="20">气压</Label>

        <Slider  Grid.Row="4" VerticalAlignment="Top" Width="620"
                 Height="50" Margin="90,30,90,0"/>
    </Grid>
</Page>
