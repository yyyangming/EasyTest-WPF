                <Image Source="E:\desket\图标\运行(1).png" Width="30" Height="30"></Image>
            </Button>
        </Border>
        <Image HorizontalAlignment="Left" Height="100" Margin="241,48,0,0" VerticalAlignment="Top" Width="100"/>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform CenterX="100" CenterY="50"></ScaleTransform>
                <!--缩放中心为100,50。RenderTransform.Children[0]-->
                <RotateTransform CenterX="100" CenterY="50"></RotateTransform>
                <!--旋转中心为100,50。RenderTransform.Children[1]-->
            </TransformGroup>
        </Grid.RenderTransform>
        
    </Grid>
</Window>
