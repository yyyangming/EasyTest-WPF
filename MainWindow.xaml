<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="操作员页面" 
        Height="667" Width="904" 
        ShowInTaskbar="True"
        WindowState="Maximized"
        AllowsTransparency="False"
        >
    <Viewbox>
        <Grid >
            <Border Margin="0,0,0,0" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="10" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Menu Background="DimGray"  HorizontalAlignment="Left" Height="auto" VerticalAlignment="Top" Width="auto" Margin="0,0,0,0">

                    <MenuItem Header="文件" Width="auto" Height="auto" Name="MenuFile">
                        <MenuItem Background="DimGray" Header="退出"/>
                    </MenuItem>
                    <MenuItem Header="编辑">
                        <MenuItem Background="DimGray" Header="编辑模式"/>
                </MenuItem>
                <MenuItem Header="配置" Width="auto" Height="auto">
                        <MenuItem Background="DimGray" Header="配置1"/>
                        <MenuItem Background="DimGray" Header="配置2"/>
                </MenuItem>
                    <MenuItem Header="帮助" Width="auto" Height="auto">
                        <MenuItem Background="DimGray" Header="帮助"></MenuItem>
                    </MenuItem>
                </Menu>
            </Border>
            <WrapPanel Background="DimGray" HorizontalAlignment="Left" Height="auto" Margin="2,50,0,236" Width="250" RenderTransformOrigin="0.5,0.469" AutomationProperties.Name="plnIcon">
                <WrapPanel Height="350"  VerticalAlignment="Top" Width="auto" AutomationProperties.Name="plnPress" Background="DimGray">

                    <Border CornerRadius="10"  BorderBrush="Black" BorderThickness="2">
                    <WrapPanel Background="DimGray"   Height="20"  VerticalAlignment="Top" Width="250" AutomationProperties.Name="plnPressButton">
                        <Button Background="DimGray" Content="文本" Height="20" VerticalAlignment="Top" Width="75" AutomationProperties.Name="btnText"/>
                            <Button Background="DimGray" Content="图形" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" AutomationProperties.Name="btnGraphical"/>
                    </WrapPanel>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="2,0,2,2">
                    <WrapPanel Height="150"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="250" Background="Black" >
                            <Line X1="50" Y1="30" X2="200" Y2="30" Stroke="White" StrokeThickness="2"></Line>
                            <Line X1="50" Y1="32" X2="200" Y2="32" Stroke="White" StrokeThickness="2"></Line>
                            <Line X1="50" Y1="34" X2="200" Y2="34" Stroke="White" StrokeThickness="2"></Line>
                            <Line X1="50" Y1="36" X2="200" Y2="36" Stroke="White" StrokeThickness="2"></Line>
                            <Line X1="50" Y1="38" X2="200" Y2="38" Stroke="White" StrokeThickness="2"></Line>
                        </WrapPanel>
                    </Border>
                    
                    <WrapPanel Background="DimGray" Height="20"  VerticalAlignment="Top" Width="250" Margin="0,2,0,0" >
                        <Button Background="DimGray" Content="文本" Height="20" VerticalAlignment="Top" Width="75" >
                            
                        </Button>
                        <Button Background="DimGray" Content="图形" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" />
                    </WrapPanel>
                    <WrapPanel Background="Black" Height="150"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="250"  >
                    </WrapPanel>
                </WrapPanel>
            </WrapPanel>
            <Border BorderThickness="1" BorderBrush="AliceBlue" Margin="0,415,0,0">
                <WrapPanel HorizontalAlignment="Left" Height="200"   VerticalAlignment="Top" Width="250" Background="DimGray">
                    <Button Content="事件" Height="25" VerticalAlignment="Top" Width="75"/>
                    <Button Content="控制" Height="25" VerticalAlignment="Top" Width="75"/>
                    <WrapPanel  Height="174" Width="250" Background="Black"/>
                </WrapPanel>
            </Border>

            <Border BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="259,55,2,2" Width="650">
            <WrapPanel  HorizontalAlignment="Center" Height="100" Margin="0,0,0,0" VerticalAlignment="Center" Width="642" Background="DimGray" />
            </Border>
            <Border Margin="258,160,5,135" BorderBrush="Black" BorderThickness="2" Width="650">
            <WrapPanel HorizontalAlignment="Left" Height="340" Margin="0,0,0,0" VerticalAlignment="Center" Width="645" Background="DimGray"/>
            </Border>
            <Border Background="White" BorderBrush="red" BorderThickness="2" Width="640" Height="110" VerticalAlignment="Bottom" Margin="265,0,1,22" HorizontalAlignment="Left" Padding="5,0,0,0">
            <WrapPanel >
                    <Button  Height="70" Width="125" Background="DimGray"/>
                    <Button  Height="70" Width="125" Background="DimGray"/>
                    <Button  Height="70" Width="125" Background="DimGray"/>
                    <Button  Height="70" Width="125" Background="DimGray"/>
                    <Button  Height="70" Width="125" Background="DimGray"/>
                    <Button  Height="70" Width="125" Background="DimGray"/>
                    <Button  Height="70" Width="125" Background="DimGray"/>
                    <Button  Height="70" Width="125" Background="DimGray"/>
                    <Button  Height="70" Width="125" Background="DimGray"/>
                    <Button  Height="70" Width="125" Background="DimGray"/>
            </WrapPanel>
            </Border>

            <StatusBar HorizontalAlignment="Center" Height="20" Margin="0,619,0,0" VerticalAlignment="Bottom" Width="913"/>
        </Grid>
    </Viewbox>
</Window>
