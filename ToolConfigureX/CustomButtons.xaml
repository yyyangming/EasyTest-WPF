            <TextBlock Name="Custom3" Text="自定义3" FontSize="20" Width="580"></TextBlock>
            <TextBlock Name="Custom4" Text="自定义4" FontSize="20" Width="580"></TextBlock>
            <TextBlock Name="Custom5" Text="自定义5" FontSize="20" Width="580"></TextBlock>
            <TextBlock Name="Custom6" Text="自定义6" FontSize="20" Width="580"></TextBlock>
        </ListView>
        <Button Content="Button" HorizontalAlignment="Left" Margin="261,20,0,10" Grid.Row="1" RenderTransformOrigin="0.5,0.5" Width="102"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="450,20,0,10" Grid.Row="1" Width="102" />
    </Grid>
</Window>
