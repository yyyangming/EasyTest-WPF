<Window x:Class="Test.ConveyorSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="ConveyorSettings" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="532*"></RowDefinition>
            <RowDefinition Height="53*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="OK" HorizontalAlignment="Left" Margin="67,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="33" Width="79"/>
        <Button Content="Cacel" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Height="33" Width="78" Margin="245,0,0,0"/>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Width="200" Header="属性" Binding="{Binding property}"></DataGridTextColumn>
                <DataGridTextColumn Width="200" Header="值" Binding="{Binding value}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
